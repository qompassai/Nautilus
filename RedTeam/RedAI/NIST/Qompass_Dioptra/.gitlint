[general]
contrib=contrib-title-conventional-commits
ignore=body-is-missing
verbosity=3
ignore-merge-commits=true
ignore-fixup-commits=true
ignore-squash-commits=false
ignore-stdin=true
regex-style-search=true
debug=false

[title-max-length]
line-length=70

[body-max-line-length]
line-length=100

[body-min-length]
min-length=5

[ignore-by-title]
regex=(^release|^Merge)
ignore=all

[contrib-title-conventional-commits]
types=build,ci,chore,docs,examples,feat,fix,perf,refactor,revert,style,test
